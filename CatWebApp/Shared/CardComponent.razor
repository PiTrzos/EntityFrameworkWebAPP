@inject NavigationManager NavigationManager
<div class="profile profile-imgonly" @onclick="()=>OpenCat(cat.BreedName)">
    <div class="profile__image"><img src="@cat.ImgSrc" alt="CatImage" /></div>
    <div class="profile__info">
        <h3>@cat.BreedName</h3>
        <p class="profile__info__extra">@cat.Description</p>
    </div>
    <div class="profile__stats">
        <p class="profile__stats__title">Origin</p>
        <h5 class="profile__stats__info">@cat.Origin</h5>
    </div>
    <div class="profile__stats">
        <p class="profile__stats__title">Life Span</p>
        <h5>@cat.LifeSpan</h5>
    </div>
    <div class="profile__stats">
        <p class="profile__stats__title">Affection Level</p>
        <h5 class="profile__stats__info">@cat.AffectionLevel</h5>
    </div>
    <div class="profile__cta"><a class="button">More Info</a></div>
</div>


@code {
    [Parameter]
    public Cat cat { get; set; }
    private void OpenCat(string breedName)
    {
        NavigationManager.NavigateTo($"/cats/{breedName.Replace(" ", "-").ToLower()}");
    }
}
